{
  "name": "seekr-gui",
  "version": "1.1.0",
  "description": "A GUI for seekr, a tool for crawling pages",
  "scripts": {
    "build": "tsc",
    "copy-files": "rm -Rf ./dist/pages && mkdir ./dist/pages && cp ./src/pages/* ./dist/pages/",
    "make": "electron-forge make",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && npm run copy-files && electron ./dist/main.js"
  },
  "main": "dist/main.js",
  "repository": "https://github.com/Internet-Computer-Tools/seekr-gui",
  "keywords": [
    "Internet Computer",
    "seekr"
  ],
  "author": "Ryan Cammer <ryancammer@gmail.com>",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "seekr"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.45.1",
    "electron": "^21.1.1",
    "electron-store": "^8.1.0",
    "eslint": "^8.25.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "seekr": "^1.4.2",
    "tslib": "^2.4.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false
  }
}
